<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    style="@style/yuki_pref_card_sin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:gravity="center_vertical"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:clipToPadding="false"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

		<TextView
			android:id="@+id/yuki_about_phone_header_device"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:text="@string/yuki_device_name"
			style="@style/yuki_text_primary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_device_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:text="@string/yuki_device_name_summary"
			android:singleLine="true"
			android:layout_below="@id/yuki_about_phone_header_device"
            android:layout_alignStart="@id/yuki_about_phone_header_device"
			style="@style/yuki_text_secondary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_chipset"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/yuki_chipset_type"
			android:layout_below="@id/yuki_about_phone_header_device_desc"
            android:layout_alignStart="@id/yuki_about_phone_header_device_desc"
			style="@style/yuki_text_primary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_chipset_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:text="@string/yuki_chipset_type_summary"
			android:singleLine="true"
			android:layout_below="@id/yuki_about_phone_header_chipset"
            android:layout_alignStart="@id/yuki_about_phone_header_chipset"
			style="@style/yuki_text_secondary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_gpu"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/yuki_gpu"
			android:layout_below="@id/yuki_about_phone_header_chipset_desc"
            android:layout_alignStart="@id/yuki_about_phone_header_chipset_desc"
			style="@style/yuki_text_primary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_gpu_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:text="@string/yuki_gpu_summary"
			android:singleLine="true"
			android:layout_below="@id/yuki_about_phone_header_gpu"
            android:layout_alignStart="@id/yuki_about_phone_header_gpu"
			style="@style/yuki_text_secondary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_camera"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/yuki_camera_mp"
			android:layout_below="@id/yuki_about_phone_header_gpu_desc"
            android:layout_alignStart="@id/yuki_about_phone_header_gpu_desc"
			style="@style/yuki_text_primary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_camera_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:text="@string/yuki_camera_mp_summary"
			android:singleLine="true"
			android:layout_below="@id/yuki_about_phone_header_camera"
            android:layout_alignStart="@id/yuki_about_phone_header_camera"
			style="@style/yuki_text_secondary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_screen"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/yuki_screen_type"
			android:layout_below="@id/yuki_about_phone_header_camera_desc"
            android:layout_alignStart="@id/yuki_about_phone_header_camera_desc"
			style="@style/yuki_text_primary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_screen_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:text="@string/yuki_screen_type_summary"
			android:singleLine="true"
			android:layout_below="@id/yuki_about_phone_header_screen"
            android:layout_alignStart="@id/yuki_about_phone_header_screen"
			style="@style/yuki_text_secondary"/>
        <TextView
			android:id="@+id/yuki_about_phone_header_maintainer"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/yuki_maintainer"
			android:layout_below="@id/yuki_about_phone_header_camera_desc"
            android:layout_alignStart="@id/yuki_about_phone_header_camera_desc"
			style="@style/yuki_text_primary"/>
		<TextView
			android:id="@+id/yuki_about_phone_header_maintainer_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:text="@string/yuki_maintainer_summary"
			android:singleLine="true"
			android:layout_below="@id/yuki_about_phone_header_screen"
            android:layout_alignStart="@id/yuki_about_phone_header_screen"
			style="@style/yuki_text_secondary"/>

    </RelativeLayout>

    <ImageView
    	android:id="@+id/yuki_about_phone_header_illustration"
    	android:layout_width="120dp"
    	android:layout_height="250dp"
    	android:gravity="center"
    	android:orientation="vertical"
    	android:src="@drawable/yuki_about_phone_header_ill"
    	android:antialias="true"
    	android:scaleType="fitXY"
    	android:layout_centerVertical="true"
    	android:contentDescription="@null"/>

</LinearLayout>
</FrameLayout>
