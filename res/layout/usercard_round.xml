<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:id="@+id/entity_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/oos_preference_background_single"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.0dip"
        android:layout_marginEnd="20.0dip"
        android:layout_marginVertical="20.0dip">
        <FrameLayout
            android:id="@+id/entity_header_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18.0dip">
            <ImageView
                android:id="@+id/entity_header_icon"
                android:padding="1.5dip"
                android:layout_width="64.0dip"
                android:layout_height="64.0dip"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:layout_weight="1.0"
            android:layout_marginEnd="20.0dip">
            <TextView
                android:textSize="20.0sp"
                android:textColor="?android:textColorPrimary"
                android:ellipsize="marquee"
                android:id="@+id/entity_header_title"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.0dip"
                android:singleLine="true"
                style="@style/op_control_text_style_h6" />
            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="@string/user_info_summary"
                android:maxLines="1"
                android:layout_below="@+id/entity_header_title"
                android:layout_alignLeft="@+id/entity_header_title"
                android:layout_alignStart="@+id/entity_header_title"
                style="@style/op_control_text_style_body1" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>